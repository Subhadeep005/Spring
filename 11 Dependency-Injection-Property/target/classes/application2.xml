<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
			"http://www.springframework.org/dtd/spring-beans-2.0.dtd">
			
<beans>
	<bean id="product" class="com.program.spring.domain.Product">
			<property name="id" value="1001" />
			<property name="name" value="MacBook" />
			<property name="model" value="Macbook Air" />
			<property name="brand" value="Apple" />
			<property name="price" value="75000" />
			<property name="properties">
					<props>
								<prop key="RAM">8GB</prop>
								<prop key="Memory">1TB</prop>
								<prop key="Processor">i5</prop>
					</props>
			</property>
	</bean>
</beans>